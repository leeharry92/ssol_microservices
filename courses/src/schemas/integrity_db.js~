var mongoServer = 'mongodb://localhost/integrity_db';
var mongoose = require( 'mongoose' );
var Schema   = mongoose.Schema;

//module.exports = function() {
	var integrity_model = new Schema({
		user_id    : String,
		name	   : String,
		content    : [String],
		updated_at : Date
	});

	mongoose.model( 'integrity_model', integrity_model ); // model
	var integrity_db = mongoose.createConnection(mongoServer);
	integrity_db.on('error', function(err){
	  if(err) throw err;
	});

	integrity_db.once('open', function callback () {
	  console.info('Mongo db connected successfully on: '+mongoServer);
	});

	module.exports = integrity_db;

//};


